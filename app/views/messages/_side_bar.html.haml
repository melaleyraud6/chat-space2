-# 画面左のサイドバー
.side-bar__contents
  -# ユーザー名とアイコンが表示されているところ
  .side-bar__user-name
    .side-bar__user-name__box
      %p.side-bar__user-name__box__name 
        =current_user.name # ログインしているユーザーの名前
      %ul.side-bar__user-name__box__menu
        %li 
          =link_to new_group_path, class: "icon" do
            =icon("fas","edit")
        %li
          -#ユーザーのアカウント編集画面へ遷移する
          =link_to edit_user_path(current_user), class: "icon" do
            =icon("fas","cog")
        
        
  -# グループリストが表示されているところ
  .side-bar__group-list 
    - current_user.groups.each do |group|
      =link_to group_messages_path(group) , class: "group" do
        .group
          %p.group__group-name 
            =group.name
          %p.group__latest-message 
            =group.show_last_message
    
        