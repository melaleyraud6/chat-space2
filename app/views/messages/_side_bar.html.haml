-# 画面左のサイドバー
.side-bar__contents
  -# ユーザー名とアイコンが表示されているところ
  .side-bar__user-name
    .side-bar__user-name__box
      %p.side-bar__user-name__box__name 
        =current_user.name # ログインしているユーザーの名前
      %ul.side-bar__user-name__box__menu
        %li 
          =link_to "#", class: "icon" do
            =icon("fas","edit")
        %li
          -#ユーザーのアカウント編集画面へ遷移する
          =link_to edit_user_path(current_user), class: "icon" do
            =icon("fas","cog")
        
        
  -# グループリストが表示されているところ
  .side-bar__group-list 
    =link_to  "#", class: "group" do
      .group
        %p.group__group-name tech-camp
        %p.group__latest-message まだメッセージがありません
    =link_to  "#", class: "group" do
      .group
        %p.group__group-name tech-academy
        %p.group__latest-message 新しい投稿があります
        